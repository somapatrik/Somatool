<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veverka.Views.S7ProfilePage"
             Title="{Binding PLC.Name}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="New address" Command="{Binding NewAddress}"/>
    </ContentPage.ToolbarItems>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Text="{Binding PLC.Name}"/>
            <Label Grid.Column="1" Text="{Binding PLC.IP}"/>
            <Label Grid.Row="1" Grid.Column="1" Text="Status"/>
            
        </Grid>

        <Grid Grid.Row="1">
            
        </Grid>

    </Grid>
    
</ContentPage>